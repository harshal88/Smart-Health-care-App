<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/TextView02"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:paddingBottom="4sp"
                android:paddingTop="8sp"
                android:textStyle="bold"
                android:text="Finished recording.  Choose a trip purpose:"
                android:textSize="16sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <TableLayout
                android:id="@+id/TableLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="4sp" >

                    <ToggleButton
                        android:id="@+id/ToggleCommute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/commute"
                        android:textOff="Commute"
                        android:textOn="Commute"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>

                    <ToggleButton
                        android:id="@+id/ToggleSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/school"
                        android:textOff="School"
                        android:textOn="School"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>

                    <ToggleButton
                        android:id="@+id/ToggleWorkRel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.7"
                        android:drawableTop="@drawable/work_related"
                        android:textOff="Work-Related"
                        android:textStyle="bold"
                        android:textOn="Work-Related"
                         android:background="@android:color/transparent"
                        android:textSize="9sp" >
                    </ToggleButton>
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="4sp" >

                    <ToggleButton
                        android:id="@+id/ToggleExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/exercise"
                        android:textOff="Exercise"
                        android:textOn="Exercise"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>

                    <ToggleButton
                        android:id="@+id/ToggleSocial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/social"
                        android:nextFocusDown="@+id/NotesField"
                        android:nextFocusUp="@+id/ToggleCommute"
                        android:textOff="Social"
                        android:textOn="Social"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>

                    <ToggleButton
                        android:id="@+id/ToggleShopping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/shoping_cart"
                        android:textOff="Shopping"
                        android:textOn="Shopping"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="4sp" >

                    <ToggleButton
                        android:id="@+id/ToggleErrand"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/errand"
                        android:textOff="Errand"
                        android:textOn="Errand"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>

                    <ToggleButton
                        android:id="@+id/ToggleOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/other"
                        android:textOff="Other"
                        android:textOn="Other"
                        android:textStyle="bold"
                         android:background="@android:color/transparent"
                        android:textSize="11sp" >
                    </ToggleButton>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/TextPurpDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:bufferType="spannable"
                android:lines="3"
                android:paddingBottom="2sp"
                android:paddingTop="4sp"
                android:text="     "
                android:textStyle="bold"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/NotesField"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="10sp"
                android:bufferType="editable"
                android:cursorVisible="true"
                android:hint="Comments about your trip"
                android:imeOptions="actionDone"
                android:inputType="textShortMessage"
                android:nextFocusDown="@+id/ButtonSubmit"
                android:nextFocusRight="@+id/ButtonSubmit"
                android:nextFocusUp="@+id/ToggleSocial"
                android:selectAllOnFocus="true" >
            </EditText>

            <Button
                android:id="@+id/ButtonPrefs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:text="Please enter your user info..."
            
                android:textSize="18sp"
                android:textStyle="bold" >
            </Button>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp" >

                <Button
                    android:id="@+id/ButtonDiscard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                    android:text="Discard"
                    android:textSize="18sp"
                   
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/ButtonSubmit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:text="Submit"
                    
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>